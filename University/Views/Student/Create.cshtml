@{
}
@model StudentViewModel
<div class="row">
    <div class="row-cols-5">
        <div class="card">
            <div class="card-header">
                <h4>Add Student: </h4>
            </div>

            <div class="card-body">
                <form asp-controller="Student" asp-action="CreateStudent" method="post">
                    <div class="mb-3 ">
                        <label class="form-label ">Student Id</label>
                        <input asp-for=Id type="number" class="form-control"  />
                    </div>

                    <div class="mb-3">
                         <label class="form-label">Student Name</label>
                        <input asp-for=Name type="text" class="form-control"  placeholder="Enter Student Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Student Surname</label>
                        <input asp-for=Surname type="text" class="form-control" placeholder="Enter Student Surname" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Student FaxNo.</label>
                        <input asp-for=FaxNo type="text" class="form-control" placeholder="Enter Student FaxNo" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-warning">Add</button>

                    </div>
                </form>
            </div>

            <div class="card-footer">
            </div>

        </div>
    </div>

</div>